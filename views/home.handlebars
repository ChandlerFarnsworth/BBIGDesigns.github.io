<!-- Process Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12 text-center">
        <h2 class="display-5 fw-bold">Our Handcrafting Process</h2>
        <p class="lead">How we create your one-of-a-kind belt buckle</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="process-step">
          <div class="step-number">1</div>
          <h4>Design</h4>
          <p>We start with your logo or design concept and create a detailed plan for your buckle.</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="process-step">
          <div class="step-number">2</div>
          <h4>Cutting</h4>
          <p>Each piece is cut by hand with a jeweler's saw from solid sheets of premium metal.</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="process-step">
          <div class="step-number">3</div>
          <h4>Crafting</h4>
          <p>Multiple steps of polishing, texturing, soldering, and adding colors in controlled conditions.</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="process-step">
          <div class="step-number">4</div>
          <h4>Finishing</h4>
          <p>Final detailing and signature numbering to create your unique, lasting piece.</p>
        </div>
      </div>
    </div>
    <div class="text-center mt-4">
      <a href="/about#process" class="btn btn-outline-secondary btn-lg">Learn More About Our Process</a>
    </div>
  </div>
</section>

